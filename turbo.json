{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "typecheck": {
            "dependsOn": ["^typecheck"],
            "cache": true
        },
        "dev": {
            "dependsOn": ["^build"],
            "persistent": true,
            "cache": false
        },
        "lint": {
            "cache": true,
            "outputs": []
        },
        "test": {
            "cache": true,
            "outputs": []
        }
    }
}
