{
    "name": "@search-hub/db",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "main": "dist/index.js",
    "types": "src/index.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./src/index.ts"
        }
    },
    "scripts": {
        "prisma:generate": "prisma generate",
        "prisma:migratedev": "prisma migrate dev",
        "prisma:migratedevinit": "prisma migrate dev --name init",
        "prisma:manual": "./scripts/apply-manual-migrations.sh",
        "prisma:reset": "prisma migrate reset",
        "dev": "tsup src/index.ts --format esm --dts --watch",
        "build": "tsup src/index.ts --format esm --dts --out-dir dist",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "lint": "eslint src/**/*.ts --config ../../eslint.config.mjs --max-warnings=0",
        "test": "echo \"(db) test placeholder\""
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/node": "^25.0.2",
        "eslint": "^9.39.2",
        "prisma": "^7.1.0",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.49.0"
    },
    "dependencies": {
        "@prisma/client": "^7.1.0",
        "@search-hub/config-env": "workspace:*"
    },
    "sideEffects": false
}
