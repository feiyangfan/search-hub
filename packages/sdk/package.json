{
    "name": "@search-hub/sdk",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "generate": "openapi-typescript ../../apps/api/openapi/openapi.json -o src/types.ts",
        "build": "tsup src/index.ts --format esm --dts --out-dir dist",
        "dev": "tsup src/index.ts --format esm --dts --watch",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "lint": "eslint src/**/*.ts --config ../../eslint.config.mjs --ignore-pattern src/types.ts --max-warnings=0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "eslint": "^9.39.2",
        "openapi-typescript": "^7.10.1",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.49.0"
    }
}
