{
    "name": "@search-hub/config-env",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "dev": "tsup src/index.ts --format esm --dts --watch",
        "build": "tsup src/index.ts --format esm --dts --out-dir dist",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "lint": "eslint src/**/*.ts --config ../../../eslint.config.mjs --max-warnings=0",
        "test": "echo \"(config-env) test placeholder\""
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/node": "^25.0.2",
        "eslint": "^9.39.2",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.49.0"
    },
    "sideEffects": false,
    "dependencies": {
        "dotenv": "^17.2.3",
        "zod": "^4.2.0"
    }
}
