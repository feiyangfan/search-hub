{
    "name": "@search-hub/observability",
    "version": "1.0.0",
    "description": "Observability utilities for Search Hub",
    "type": "module",
    "private": true,
    "main": "dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "sideEffects": false,
    "scripts": {
        "dev": "tsup src/index.ts --format esm --dts --watch",
        "build": "tsup src/index.ts --format esm --dts --out-dir dist --clean",
        "clean": "rm -rf dist",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "lint": "eslint src/**/*.ts --config ../../eslint.config.mjs --max-warnings=0",
        "test": "echo \"(observability) test placeholder\" && exit 1"
    },
    "keywords": [],
    "author": "Feiyang Fan",
    "license": "ISC",
    "packageManager": "pnpm@10.17.1",
    "dependencies": {
        "@opentelemetry/api": "^1.9.0",
        "@search-hub/db": "workspace:*",
        "prom-client": "^15.1.3"
    },
    "devDependencies": {
        "ioredis": "^5.8.0",
        "redis": "^5.8.3",
        "tsc": "^2.0.4",
        "tsup": "^8.5.0",
        "typescript": "^5.9.3"
    }
}
