{
    "name": "search-hub",
    "version": "1.0.0",
    "private": true,
    "description": "A multi-tenant, full-stack knowledge hub with hybrid retrieval and production-grade observability",
    "keywords": [],
    "author": "Feiyang Fan",
    "license": "ISC",
    "packageManager": "pnpm@10.19.0",
    "scripts": {
        "prisma:gen": "pnpm --filter @search-hub/db prisma:generate",
        "prisma:migratedev": "pnpm --filter @search-hub/db prisma:migratedev",
        "prisma:migrateinitdev": "pnpm --filter @search-hub/db prisma:migratedevinit",
        "prisma:all": "pnpm --filter @search-hub/db prisma:generate && pnpm --filter @search-hub/db prisma:migratedev",
        "prisma:reset": "pnpm --filter @search-hub/db prisma:reset",
        "openapi:genapi": "pnpm --filter api openapi:generate",
        "openapi:gensdk": "pnpm --filter @search-hub/sdk generate",
        "openapi:genall": "pnpm run openapi:genapi && pnpm run openapi:gensdk",
        "dev:clean": "pnpm redis:clear && pnpm dev",
        "redis:clear": "docker compose -f infra/docker-compose.yml exec -T redis redis-cli FLUSHALL",
        "build": "turbo run build",
        "docker": "docker compose -f infra/docker-compose.yml up -d",
        "dev": "turbo run dev --parallel",
        "lint": "turbo run lint",
        "typecheck": "turbo run typecheck",
        "test": "turbo run test",
        "clean": "turbo run clean && rimraf node_modules .turbo",
        "gen": "turbo run generate"
    },
    "engines": {
        "node": "22",
        "pnpm": ">=10.0.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.36.0",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "rimraf": "^6.0.1",
        "turbo": "^2.5.8",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.45.0"
    },
    "pnpm": {
        "overrides": {
            "eslint-plugin-react-hooks": "6.1.0"
        }
    },
    "dependencies": {
        "@tanstack/react-query": "^5.90.7",
        "@tanstack/react-query-devtools": "^5.90.2"
    }
}
