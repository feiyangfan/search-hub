{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "outDir": "./dist",
        "noImplicitAny": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
