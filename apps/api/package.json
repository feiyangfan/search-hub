{
    "name": "api",
    "version": "1.0.0",
    "description": "API server for Search Hub",
    "main": "dist/index.js",
    "private": true,
    "type": "module",
    "author": "Feiyang Fan",
    "packageManager": "pnpm@10.15.1",
    "dependencies": {
        "@search-hub/ai": "workspace:*",
        "@search-hub/config-env": "workspace:*",
        "@search-hub/db": "workspace:*",
        "@search-hub/logger": "workspace:*",
        "@search-hub/observability": "workspace:*",
        "@search-hub/schemas": "workspace:*",
        "@types/express-session": "^1.18.2",
        "bcrypt": "^6.0.0",
        "bullmq": "^5.66.0",
        "chrono-node": "^2.9.0",
        "compression": "^1.8.1",
        "connect-redis": "^9.0.0",
        "cors": "^2.8.5",
        "express": "^5.2.1",
        "express-session": "^1.18.2",
        "google-auth-library": "^10.5.0",
        "helmet": "^8.1.0",
        "ioredis": "^5.8.2",
        "prom-client": "^15.1.3",
        "redis": "^5.10.0",
        "swagger-ui-express": "^5.0.1",
        "zod": "^4.2.0"
    },
    "scripts": {
        "openapi:generate": "tsx scripts/generate-openapi.ts",
        "dev": "tsx watch src/index.js",
        "build": "tsup src/index.ts --format esm,cjs --out-dir dist",
        "start": "node dist/index.js",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "test": "vitest run --coverage",
        "lint": "eslint . --max-warnings=0",
        "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
        "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}"
    },
    "engines": {
        "node": "22"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@search-hub/logger": "workspace:*",
        "@tsconfig/node22": "^22.0.5",
        "@types/bcrypt": "^6.0.0",
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/node": "^25.0.2",
        "@types/supertest": "^6.0.3",
        "@types/swagger-ui-express": "^4.1.8",
        "@vitest/coverage-v8": "^4.0.15",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "onchange": "^7.1.0",
        "pino": "^10.1.0",
        "pino-http": "^11.0.0",
        "prettier": "^3.7.4",
        "supertest": "^7.1.4",
        "tsup": "^8.5.1",
        "tsx": "^4.21.0",
        "typescript-eslint": "^8.49.0",
        "vitest": "^4.0.15"
    }
}
