{
  "openapi": "3.0.3",
  "info": {
    "title": "Search Hub API",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/v1/documents": {
      "post": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tenantId": {
                    "description": "Tenant ID to scope the search",
                    "example": "tenant123",
                    "type": "string",
                    "minLength": 1
                  },
                  "title": {
                    "description": "Title of the document, provided by the user",
                    "example": "My Document",
                    "type": "string",
                    "minLength": 1
                  },
                  "source": {
                    "description": "source of the document",
                    "example": "upload",
                    "default": "upload",
                    "type": "string",
                    "enum": [
                      "upload",
                      "url",
                      "api"
                    ]
                  },
                  "mimeType": {
                    "description": "MIME type of the document",
                    "example": "application/pdf",
                    "type": "string"
                  }
                },
                "required": [
                  "tenantId",
                  "title"
                ]
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Queued",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "description": "A unique identifier string",
                      "example": "doc123",
                      "descriptions": "document Id, assigned by the server",
                      "type": "string",
                      "minLength": 1
                    },
                    "status": {
                      "default": "queued",
                      "type": "string",
                      "enum": [
                        "indexed",
                        "queued",
                        "failed"
                      ]
                    }
                  },
                  "required": [
                    "id",
                    "status"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "description": "Error message",
                      "example": "Bad Request",
                      "type": "string"
                    },
                    "code": {
                      "description": "API Error format",
                      "example": "VALIDATION_ERROR",
                      "type": "string"
                    }
                  },
                  "required": [
                    "error"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    },
    "/v1/search": {
      "get": {
        "parameters": [
          {
            "in": "query",
            "name": "tenantId",
            "schema": {
              "description": "Tenant ID to scope the search",
              "example": "tenant123",
              "type": "string",
              "minLength": 1
            },
            "required": true,
            "description": "Tenant ID to scope the search"
          },
          {
            "in": "query",
            "name": "q",
            "schema": {
              "example": "typescript",
              "type": "string",
              "minLength": 1
            },
            "required": true
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "description": "Maximum number of results to return",
              "example": 10,
              "default": 10,
              "type": "integer",
              "minimum": 1,
              "maximum": 50
            },
            "description": "Maximum number of results to return"
          },
          {
            "in": "query",
            "name": "offset",
            "schema": {
              "description": "Number of results to skip for pagination",
              "example": 0,
              "default": 0,
              "type": "integer",
              "minimum": 0,
              "maximum": 9007199254740991
            },
            "description": "Number of results to skip for pagination"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total": {
                      "description": "Total number of matched items",
                      "example": 100,
                      "type": "integer",
                      "minimum": 0,
                      "maximum": 9007199254740991
                    },
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "description": "A unique identifier string",
                            "example": "abc123",
                            "type": "string",
                            "minLength": 1
                          },
                          "title": {
                            "example": "typescript documentation 1",
                            "type": "string"
                          },
                          "snippet": {
                            "description": "A short snippet of the matched content",
                            "example": "TypeScript is a typed superset of JavaScript that compiles to plain JavaScript...",
                            "type": "string"
                          },
                          "score": {
                            "description": "Relevance score for ranking",
                            "example": 0.95,
                            "type": "number"
                          },
                          "url": {
                            "description": "Link to the full document or resource",
                            "example": "https://www.typescriptlang.org/docs/",
                            "type": "string"
                          }
                        },
                        "required": [
                          "id",
                          "title"
                        ],
                        "additionalProperties": false
                      }
                    },
                    "page": {
                      "description": "Page number, starting from 1",
                      "example": 1,
                      "default": 1,
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 9007199254740991
                    },
                    "pageSize": {
                      "description": "Number of items per page, max 100",
                      "example": 10,
                      "default": 10,
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 100
                    }
                  },
                  "required": [
                    "total",
                    "items"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "description": "Error message",
                      "example": "Bad Request",
                      "type": "string"
                    },
                    "code": {
                      "description": "API Error format",
                      "example": "VALIDATION_ERROR",
                      "type": "string"
                    }
                  },
                  "required": [
                    "error"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    },
    "/v1/tenants": {
      "post": {
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "description": "Name of the tenant",
                    "example": "Software Inc",
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": [
                  "name"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "description": "Tenant ID",
                      "example": "tenant123",
                      "type": "string",
                      "minLength": 1
                    },
                    "name": {
                      "description": "Name of the tenant",
                      "example": "Software Inc",
                      "type": "string",
                      "minLength": 1
                    },
                    "createdAt": {
                      "type": "string",
                      "format": "date-time",
                      "pattern": "^(?:(?:\\d\\d[2468][048]|\\d\\d[13579][26]|\\d\\d0[48]|[02468][048]00|[13579][26]00)-02-29|\\d{4}-(?:(?:0[13578]|1[02])-(?:0[1-9]|[12]\\d|3[01])|(?:0[469]|11)-(?:0[1-9]|[12]\\d|30)|(?:02)-(?:0[1-9]|1\\d|2[0-8])))T(?:(?:[01]\\d|2[0-3]):[0-5]\\d(?::[0-5]\\d(?:\\.\\d+)?)?(?:Z||([+-](?:[01]\\d|2[0-3]):[0-5]\\d)))$"
                    },
                    "updatedAt": {
                      "type": "string",
                      "format": "date-time",
                      "pattern": "^(?:(?:\\d\\d[2468][048]|\\d\\d[13579][26]|\\d\\d0[48]|[02468][048]00|[13579][26]00)-02-29|\\d{4}-(?:(?:0[13578]|1[02])-(?:0[1-9]|[12]\\d|3[01])|(?:0[469]|11)-(?:0[1-9]|[12]\\d|30)|(?:02)-(?:0[1-9]|1\\d|2[0-8])))T(?:(?:[01]\\d|2[0-3]):[0-5]\\d(?::[0-5]\\d(?:\\.\\d+)?)?(?:Z||([+-](?:[01]\\d|2[0-3]):[0-5]\\d)))$"
                    }
                  },
                  "required": [
                    "id",
                    "name"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "description": "Tenant ID",
                      "example": "tenant123",
                      "type": "string",
                      "minLength": 1
                    },
                    "name": {
                      "description": "Name of the tenant",
                      "example": "Software Inc",
                      "type": "string",
                      "minLength": 1
                    },
                    "createdAt": {
                      "type": "string",
                      "format": "date-time",
                      "pattern": "^(?:(?:\\d\\d[2468][048]|\\d\\d[13579][26]|\\d\\d0[48]|[02468][048]00|[13579][26]00)-02-29|\\d{4}-(?:(?:0[13578]|1[02])-(?:0[1-9]|[12]\\d|3[01])|(?:0[469]|11)-(?:0[1-9]|[12]\\d|30)|(?:02)-(?:0[1-9]|1\\d|2[0-8])))T(?:(?:[01]\\d|2[0-3]):[0-5]\\d(?::[0-5]\\d(?:\\.\\d+)?)?(?:Z||([+-](?:[01]\\d|2[0-3]):[0-5]\\d)))$"
                    },
                    "updatedAt": {
                      "type": "string",
                      "format": "date-time",
                      "pattern": "^(?:(?:\\d\\d[2468][048]|\\d\\d[13579][26]|\\d\\d0[48]|[02468][048]00|[13579][26]00)-02-29|\\d{4}-(?:(?:0[13578]|1[02])-(?:0[1-9]|[12]\\d|3[01])|(?:0[469]|11)-(?:0[1-9]|[12]\\d|30)|(?:02)-(?:0[1-9]|1\\d|2[0-8])))T(?:(?:[01]\\d|2[0-3]):[0-5]\\d(?::[0-5]\\d(?:\\.\\d+)?)?(?:Z||([+-](?:[01]\\d|2[0-3]):[0-5]\\d)))$"
                    }
                  },
                  "required": [
                    "id",
                    "name"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "description": "Error message",
                      "example": "Bad Request",
                      "type": "string"
                    },
                    "code": {
                      "description": "API Error format",
                      "example": "VALIDATION_ERROR",
                      "type": "string"
                    }
                  },
                  "required": [
                    "error"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    }
  }
}